<div class="container">
  <div class="row">

      <h1 class="bubbleText">Red: Complaint | Blue: Neutral | Green: Positive</h1>

    <div class="col-xs-1">

      <div style="background: lightgreen; width: 30px; height: 30px; border-radius: 30px;"></div>
    </div>

    <div class="col-xs-1">
      <div style="background: blue; width: 30px; height: 30px; border-radius: 30px;"></div>
    </div>

    <div class="col-xs-1">
      <div style="background: red; width: 30px; height: 30px; border-radius: 30px;"></div>
    </div>

    <div class="col-xs-8">
      <%= render "ticketButtons" %>
      <br/>
      <div id="container_tickets">
        <% @tickets.each do |ticket| %>
          <%= render ticket %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <%= form_for(@ticket, remote: true) do |f| %>
  <div class="modal fade" id="mynewticket" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">New Ticket</h4>
        </div>
        <div class="modal-body">
          <div class="field">
            <%= f.label :name %><br>
            <%= f.text_area :name, class: "form-control ticket_name" %>
          </div>
          <div class="field">
            <%= f.label :email %><br>
            <%= f.text_area :email, class: "form-control ticket_email" %>
          </div>
          <div class="field">
            <%= f.label :subject %><br>
            <%= f.text_area :subject, class: "form-control ticket_subject" %>
          </div>
          <div class="field">
            <%= f.label :content %><br>
            <%= f.text_area :content, class: "form-control ticket_content" %>
          </div>
        </div>
        <!-- Close Button -->
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal" id="mynewticketclose">Close</button>
          <%= submit_tag "Create", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>
