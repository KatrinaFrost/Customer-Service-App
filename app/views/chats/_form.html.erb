<!-- _________________________ Chat form ____________________________________ -->

<%= form_with(model: chat, local: true) do |form| %>
  <% if chat.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(chat.errors.count, "error") %> prohibited this chat from being saved:</h2>

      <ul>
      <% chat.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Name -->
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :chat_name %>
  </div>

  <!-- Subject -->
  <div class="field">
    <%= form.label :subject %>
    <%= form.text_field :subject, id: :chat_name %>
  </div>

  <!-- Content -->
  <div class="field">
    <%= form.label :content %>
    <%= form.text_field :content, id: :chat_name %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
